<main>
  <section id="details-page">
    <div class="main_card">
      <div class="card_left">
        <div class="card_datails">
          <h1>{{movieData.title}}</h1>
          <div class="card-movie">
            <div class="first-info">
              <p class="card-genre">Genre: {{movieData.genre}}</p>
              <p class="card-director">Directror: {{movieData.director}}</p>
            </div>
            <div class="second-info">
              <p class="card-year">Year: {{movieData.year}}</p>
              <p class="card-ranking">
                Rating:
                <span id="stars"> {{{movieData.rating}}} </span>
              </p>
            </div>
          </div>

          <p class="disc">
            {{movieData.description}}
          </p>
        </div>
        {{#if isOwner}}
        <div class="details-btn">
            <a href="/movies/edit/{{movieData._id}}"><button id="edit-button">Edit</button></a>
            <a href="/movies/delete/{{movieData._id}}"><button id="delete-button">Delete</button></a>
        </div>
        {{/if}}
      </div>
      <div class="card_right">
        <img src="{{movieData.imageUrl}}" alt="image" />
      </div>
    </div>

      <div class="main-cast-card">
        {{#each casts}}
            <div class="cast-card">
                <div class="card-img">
                    <img src="{{castImage}}" alt="{{name}}">
                </div>
                <div class="cast-info">
                    <h1>{{name}}</h1>
                    <h3>Age: {{age}}</h3>
                    <h3>Born: {{born}}</h3>
                    <h3>Name in Movie: {{nameInMovie}}</h3>
                </div>
            </div>
            {{else}}
            <h2>No casts yet.</h2>
        {{/each}}
        </div>
  </section>
</main>
